<p id="notice"><%= notice %></p>

<h1>Tweets</h1>
<%= link_to 'New Tweet', new_tweet_path, class: "btn btn-success btn-lg" %>

<table class="table">
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<!--  -->
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= link_to 'Show', tweet, class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-info" %></td>
        <td><%= link_to 'Delete', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
