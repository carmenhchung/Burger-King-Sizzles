<p id="notice"><%= notice %></p>

<h1>Crowns</h1>

<table>
  <thead>
    <tr>
      <th>Tweet</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crowns.each do |crown| %>
      <tr>
        <td><%= crown.tweet_id %></td>
        <td><%= crown.user_id %></td>
        <td><%= link_to 'Show', crown %></td>
        <td><%= link_to 'Edit', edit_crown_path(crown) %></td>
        <td><%= link_to 'Destroy', crown, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crown', new_crown_path %>
